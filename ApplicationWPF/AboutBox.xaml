<Window x:Class="ApplicationWPF.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF"
        mc:Ignorable="d"
        Title="AboutBox" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock x:Name="tbNomProjet" FontSize="15" />
        <TextBlock x:Name="tbSociete" FontSize="15"/>
        <TextBlock x:Name="tbVersion" FontSize="15"/>
        <TextBlock x:Name="tbCopyright" FontSize="15"/>
        <TextBlock x:Name="tbDescription" FontSize="15"/>

        <Button x:Name="okButton" Content="Ok" Click="okButton_Click" Width="40" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </StackPanel>
</Window>
