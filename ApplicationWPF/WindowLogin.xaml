<Window x:Class="ApplicationWPF.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF"
        mc:Ignorable="d"
        Title="WindowLogin" Height="200" Width="400"
        ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" TextDecorations="Underline" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nom : "/>
            <TextBox x:Name="tbNom"  Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Prenom : " />
            <TextBox x:Name="tbPrenom" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Email : " />
            <TextBox x:Name="tbEmail" Width="100"/>
        </StackPanel>
        <TextBlock x:Name="tbBadSaisie" HorizontalAlignment="Center" Foreground="Red"/>
        <Button x:Name="connectButton" HorizontalAlignment="Right" Background="AliceBlue" Content="Connexion" Click="connectButton_Click"/>

    </StackPanel>
</Window>
